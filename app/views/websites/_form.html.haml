= form_for @website do |f|
  - if @website.errors.any?
    #error_explanation
      %h2= "#{pluralize(@website.errors.count, "error")} prohibited this website from being saved:"
      %ul
        - @website.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :website_title
    = f.text_field :website_title
  .field
    = f.label :copyright
    = f.datetime_select :copyright, discard_month: true, discard_hour:true, start_year: Time.now.year - 300, end_year: Time.now.year
  .field
    = f.label :article_title
    = f.text_field :article_title
  .field
    = f.label :publication_city
    = f.text_field :publication_city
  .field
    = f.label :date_viewed
    = f.datetime_select :date_viewed, discard_hour:true, start_year: Time.now.year - 300, end_year: Time.now.year
  .field
    = f.label :url
    = f.text_area :url
  .actions
    = f.submit 'Save'