= form_for @book_author do |f|
  - if @book_author.errors.any?
    #error_explanation
      %h2= "#{pluralize(@book_author.errors.count, "error")} prohibited this book_author from being saved:"
      %ul
        - @book_author.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :book_id
    = f.number_field :book_id
  .field
    = f.label :first_name
    = f.text_field :first_name
  .field
    = f.label :last_name
    = f.text_field :last_name
  .actions
    = f.submit 'Save'
