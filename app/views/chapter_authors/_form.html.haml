= form_for @chapter_author do |f|
  - if @chapter_author.errors.any?
    #error_explanation
      %h2= "#{pluralize(@chapter_author.errors.count, "error")} prohibited this chapter_author from being saved:"
      %ul
        - @chapter_author.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :chapter_id
    = f.number_field :chapter_id
  .field
    = f.label :first_name
    = f.text_field :first_name
  .field
    = f.label :last_name
    = f.text_field :last_name
  .actions
    = f.submit 'Save'
